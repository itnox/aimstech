doctype html
html
	head
		title= title
		link(rel='stylesheet', href='/stylesheets/style.css')
		link(rel='stylesheet', href='/stylesheets/bootswatch.css')
	body
	nav.navbar.navbar-expand-lg.navbar-light.bg-light
		a.navbar-brand(href='#') Aimstech
		button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarColor01', aria-controls='navbarColor01', aria-expanded='false',aria-label='Toggle navigation')
			span.navbar-toggler-icon
		#navbarColor01.collapse.navbar-collapse
			ul.navbar-nav.mr-auto
				li.nav-item(class=(title == 'Members' ? 'active' : ''))
					a.nav-link(href='/') Members
				li.nav-item(class=(title == 'About' ? 'active' : ''))
					a.nav-link(href='/about') About
				li.nav-item(class=(title == 'Login' ? 'active' : ''))
					a.nav-link(href='/users/login') Login
		#navbarColor01.my-2.my-lg-0
			ul.navbar-nav.mr-auto
				li.nav-item
					a.nav-link(href='/users/logout') Logout
	.container
		block content